{% extends 'base.html.twig' %}

{% block title %}En details{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Creation de projet</h1>
    <table>
        {% for consultant in consultantList %}
            <tr>
                <td>{{ consultant.nameC }} {{ consultant.firstNameC }}</td>
                {% if consultantAddedList[consultant.id] is defined %}
                <td><a role="button" href="{{ path('delete_from_project', { 'id_projet' : projetId, 'id_consultant' : consultant.id }) }}">Supprimer du projet</a></td>
                {% else %}
                    <td><a role="button" href="{{ path('add_to_project', { 'id_projet' : projetId, 'id_consultant' : consultant.id }) }}">Ajouter au projet</a></td>
                {% endif %}
                    </tr>
    {% endfor %}
    </table>
</div>

{% endblock %}
